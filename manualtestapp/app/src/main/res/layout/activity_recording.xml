<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="alticast.com.androidtvtestapp.RecordingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check buffer reading and connect USB!"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_scan_buffer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="START" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Creating Channel!"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_create_channel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="START" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test Recording!"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_recording"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="START" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/footer_success_fail" />
</RelativeLayout>